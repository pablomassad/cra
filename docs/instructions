npm install -g @quasar/cli

npm init quasar

npm i  // instala node_modules

npm list // lista librerías y dependencias

npm view library versions


quasar build  // compila y copia en dist/spa
quasar dev // arranca la app


quasar mode add capacitor
quasar dev -m capacitor -T android



// PARA GENERAR LOS ICONOS / SPLASH
npm install @capacitor/assets --save-dev

resources/
├── icon-only.png
├── icon-foreground.png
├── icon-background.png
├── splash.png
└── splash-dark.png

npx capacitor-assets generate


npx cap init

npx cap add android

npx cap ls // lista de plugins instalados

npx cap sync  // sincroniza con android studio

npx cap open android  // abre android studio y compila apk

npx cap doctor

npx cap build android --keystorepath my-keystore.jks --keystorepass my-keystore-password --keystorealias my-key-alias --keystorekeypass my-key-password  // build android app and sign it

keytool -genkeypair -alias my-key-alias -keyalg RSA -keysize 2048 -validity 10000 -keystore my-keystore.jks



keytool -genkey -v -keystore diagnostico-key.jks -keyalg RSA -keysize 1024 -validity 10000 -alias diagnostico.desa -sigalg MD5withRSA
(Cambiar diagnostico.ENV para cada ambiente antes de generar apk)
